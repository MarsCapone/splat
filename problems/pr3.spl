<| Task 3 - Stream arithmetic |>

function number t3 (number list splat) {
    if splat == [] {
        0
    } else {
        let [h = split (head splat)] {
            let [s = (showln (num (head h)) 
                        + ((num (head (tail h))) * 3)) ] {
                t3 #(tail splat)
            }
        }
    }
} #stdin
